<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Storage" Height="450" Width="600">
    <Grid>
        <Button Name="btnAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,10,0,0" Click="btnAdd_Click"/>
        <Button Name="btnDisplay" Content="Display" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,50,0,0" Click="btnDisplay_Click"/>
        <Button Name="btnSortByName" Content="Sort by Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,90,0,0" Click="btnSortByName_Click"/>
        <Button Name="btnSortByAge" Content="Sort by Age" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,130,0,0" Click="btnSortByAge_Click"/>
        <Button Name="btnSearchByAge" Content="Search by Age" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,170,0,0" Click="btnSearchByAge_Click"/>
        <Button Name="btnSearchByName" Content="Search by Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,210,0,0" Click="btnSearchByName_Click"/>
        <Button Name="btnRemoveByName" Content="Remove by Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,250,0,0" Click="btnRemoveByName_Click"/>
        <Button Name="btnRemoveByAge" Content="Remove by Age" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,290,0,0" Click="btnRemoveByAge_Click"/>
        
        <TextBox Name="txtOutput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="200" Margin="120,10,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
